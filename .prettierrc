{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "endOfLine": "lf",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "**/*.sol",
      "options": {
        "parser": "slang",
        "tabWidth": 4,
        "singleQuote": false,
        "bracketSpacing": false
      }
    }
  ]
}
